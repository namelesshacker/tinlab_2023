		<declaration>// Place local declarations here.
// max stack size
const int SIZE=5;


// een array met waarden van het type: schip_id
schip_id stack[SIZE];

int[0,SIZE] head=0;

schip_id pop()
{
  schip_id temp;
  temp=stack[--head];
  stack[head]=0;
  return temp;
}

void push(schip_id schip)
{
 stack[head++]=schip; // post increment
}

bool isFull()
{
 return (head==SIZE);
}


bool isEmpty()
{
    return (head==0);
}
