		<declaration>const int queue_size = 3;

int[0, queue_size-1] queue[int[0, queue_size-1]];

int[0, queue_size-1] counter;

void push(int value)
{
    queue[counter++] = value;
}

int pop()
{
    return queue[counter--];
}

bool is_empty()
{
    return counter == 0;
}

bool is_full()
{
    return counter == queue_size - 1;
}</declaration>
