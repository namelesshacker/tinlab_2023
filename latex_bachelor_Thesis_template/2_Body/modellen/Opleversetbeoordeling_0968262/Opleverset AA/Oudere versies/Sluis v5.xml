			<label kind="assignment" x="-263" y="-8">pumpIsBezig:=true</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Request</name>
		<declaration>// Place local declarations here.
</declaration>
		<location id="id14" x="-527" y="-263">
		</location>
		<location id="id15" x="-748" y="-153">
			<committed/>
		</location>
		<location id="id16" x="-748" y="-382">
			<committed/>
		</location>
		<location id="id17" x="-748" y="-263">
		</location>
