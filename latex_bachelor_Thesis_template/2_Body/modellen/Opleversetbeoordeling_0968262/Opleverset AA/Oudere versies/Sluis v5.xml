			<label kind="assignment" x="-850" y="-229">direction:=false</label>
		</transition>
		<transition>
			<source ref="id17"/>
			<target ref="id16"/>
			<label kind="guard" x="-833" y="-365">!sluisIsBezig</label>
			<label kind="assignment" x="-841" y="-348">direction:=true</label>
		</transition>
	</template>
	<system>// List one or more processes to be composed into a system.
system Request, Pump, Gate, Controller;
    </system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
